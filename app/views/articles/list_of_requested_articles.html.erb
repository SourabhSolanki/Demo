<h1 id="head">Listing of Requested articles</h1>

<table >
  <tr id="head">
    <th > User Name</th><td> </td>
    <th >Article Title</th>
    <th>Date of Article Created</th>
   
  </tr>
  <% @articles.each do |article| %>
  <tr>
    <%@user_name = User.find(article.user_id)%>
    <td ><%= @user_name.name + " " + @user_name.surname %></td><td></td>
    <td ><%= article.title %></td>
    <td> <%=article.created_at.strftime("%d %b, %Y") %></td>
    <td>
        <%= link_to 'Show',user_article_path(@user_name.id, article.id) %>
    </td>
   
  </tr>

  <%end%>
</table>
