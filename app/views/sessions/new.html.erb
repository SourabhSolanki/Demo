
<div class="alert alert-danger">
<%= flash[:error] unless flash[:error].blank? %>
</div>
<h1>Log in</h1> 
<%= form_for(:session, url: login_path) do |f| %>

	<div class="form-group">
	  <%= f.label :email ,class:"col-md-4"%>
	  <div class="col-md-3">
	    <%= f.email_field :email ,placeholder:"Enter Email", class:"form-control"%>
	  </div>
	</div>


  <div class="form-group">
    <%= f.label :password  ,class:"col-md-4"%>
    <div class="col-md-3">
      <%= f.password_field :password  ,placeholder:"Enter password ", class:"form-control"%>
    </div>
  </div>


	<div class="form-group">
		<%= f.submit "Log in",class:"btn btn-success col-md-3" %>
	</div>
<% end %>
<p>New user? <%= link_to "Sign up now!", signup_path %></p>
  

 