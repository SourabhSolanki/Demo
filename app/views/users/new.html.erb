<%= form_for(@user) do |f| %>
  <%= f.label :name %>
   <br>
  <%= f.text_field :name ,placeholder:"Enter Name"%>
  <br>
  <%= f.label :surname  %>
  <br>
  <%= f.text_field :surname ,placeholder:"Enter Surname"%>
  <br>
  <%= f.label :email %>
  <br>
  <%= f.email_field :email,placeholder:"Enter Email" %>
  <br>
  <%= f.label :mobile %>
  <br>
  <%= f.text_field:mobile ,placeholder:"Enter mobile no." %>
  <br>

  <%= f.label :password %>
  <br>
  <%= f.password_field :password ,placeholder:"Enter password" %>
  <br>

  <%= f.label :password_confirmation, "Confirmation" %>
  <br>
  <%= f.password_field :password_confirmation %>
  <br>
  <br>
  <%= f.submit "Create my account",class:"btn btn-success" %>
<% end %>
<%= link_to 'Back', login_path %>
